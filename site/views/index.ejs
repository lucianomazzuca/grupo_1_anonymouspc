<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>

  <body>

    <%- include('./partials/header.ejs') %>

 <!-- BANNER -->

    <section class="banner">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="images/banner2.png" class="d-block w-100 img-responsive" alt="...">
          </div>
          <div class="carousel-item">
            <img src="images/banner1.png" class="d-block w-100 img-responsive" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </section>

<!-- Home  -->

    <section class="principal">
      <div class="container">
        <div class="row">

          <div class="col-12 titulo">
            <h2>Productos Destacados</h2>
          </div>
          <% destacados.forEach(producto => { %>
 

          <div class="col-12 col-md-6 col-lg-3 contenedor">

            <div class="producto">
              <a href="/products/detail/<%= producto.id %>   ">
                <figure>
                  <img src="images/products/<%= producto.images %> " alt="">
                </figure>
                <article>
                  <span> <%= producto.brands.brand_name + " " + producto.model %>  </span>
                  <h2>$<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></h2>
                </article>
             </a>
            </div>

          </div>
          <% }) %>

        </div>

        <div class="row">

          <div class="col-12 titulo">
            <h2>Ofertas</h2>
          </div>

          <% ofertas.forEach(producto => { %>
 

            <div class="col-12 col-md-6 col-lg-3 contenedor">
  
              <div class="producto">
                <a href="/products/detail/<%= producto.id %>  ">
                  <figure>
                    <img src="images/products/<%= producto.images %> " alt="">
                  </figure>
                  <article>
                    <span> <%= producto.brands.brand_name + " " + producto.model %>  </span>
                    <h2>$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")  %> </h2>
                  </article>
               </a>
              </div>
  
            </div>
            <% }) %>
        
      </div>
    </section>


