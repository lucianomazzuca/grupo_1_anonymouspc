<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>

  <body>

    <%- include('./partials/header.ejs') %>

 <!-- BANNER -->

    <section class="banner">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="images/banner2.png" class="d-block w-100 img-responsive" alt="...">
          </div>
          <div class="carousel-item">
            <img src="images/banner1.png" class="d-block w-100 img-responsive" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </section>

<!-- Home  -->

    <section class="principal">
      <div class="container">
        <div class="row">

          <div class="col-12 titulo">
            <h2>Productos Destacados</h2>
          </div>
          <% destacados.forEach(producto => { %>
 

          <div class="col-12 col-md-6 col-lg-3 contenedor">

            <div class="producto">
              <a href="/products/detail/<%= producto.id %>   ">
                <figure>
                  <img src="images/products/<%= producto.image %> " alt="">
                </figure>
                <article>
                  <span> <%= producto.categoria + " " + producto.marca %>  </span>
                  <h2>$<%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></h2>
                </article>
             </a>
            </div>

          </div>
          <% }) %>
        

          

        </div>

        <div class="row">

          <div class="col-12 titulo">
            <h2>Ofertas</h2>
          </div>

          <% ofertas.forEach(producto => { %>
 

            <div class="col-12 col-md-6 col-lg-3 contenedor">
  
              <div class="producto">
                <a href="/products/detail/<%= producto.id %>  ">
                  <figure>
                    <img src="images/products/<%= producto.image %> " alt="">
                  </figure>
                  <article>
                    <span> <%= producto.categoria + " " + producto.marca %>  </span>
                    <h2>$<%= producto.precio.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")  %> </h2>
                  </article>
               </a>
              </div>
  
            </div>
            <% }) %>


        
      </div>
    </section>


    <section class="categorias">
      <div class="container">

        <div class="col-12 titulo">
          <h2>Categorias Destacadas</h2>
        </div>

        <div class="fila">

          <div class="columna">
            <div class="cat">
              <a href="/products/">
                <figure>
                  <img src="icons/cat/cat-disco.svg" alt="">
                </figure>
                <div class="text">
                  Discos Rigidos
                </div>
              </a>
            </div>

            <div class="cat">
              <a href="/products/">
                  <figure>
                    <img src="icons/cat/cat-micro.svg" alt="">
                  </figure>
                  <div class="text">
                    Microprocesadores
                  </div>
                </div>
              </a>
          </div>
          
          <div class="columna">
            <div class="cat">
              <figure>
                <img src="icons/cat/cat-ram.svg" alt="">
              </figure>
              <div class="text">
                Memoria RAM
              </div>
            </div>
            <div class="cat">
              <figure>
                <img src="icons/cat/cat-video.svg" alt="">
              </figure>
              <div class="text">
                Placa de Video
              </div>
            </div>
          </div>

          <div class="columna">
            <div class="cat">
              <figure>
                <img src="icons/cat/cat-mother.svg" alt="">
              </figure>
              <div class="text">
                Motherboard
              </div>
            </div>
            <div class="cat">
              <figure>
                <img src="icons/cat/cat-teclado.svg" alt="">
              </figure>
              <div class="text">
                Teclado
              </div>
            </div>
          </div>

          <div class="columna">
            <div class="cat">
              <figure>
                <img src="icons/cat/cat-ssd.svg" alt="">
              </figure>
              <div class="text">
                SSD
              </div>
            </div>
            <div class="cat">
              <figure>
                <img src="icons/cat/cat-mouse.svg" alt="">
              </figure>
              <div class="text">
                Mouse
