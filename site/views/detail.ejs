<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>



    <div class="container">
        <div class="row">
            <div class="col-md-5 izquierda">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/products/<%= producto.images %> " class="d-block w-100" alt="Primera imagen">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/products/<%= producto.images %>" class="d-block w-100" alt="Segunda imagen">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/products/<%= producto.images %>" class="d-block w-100" alt="Tercera imagen">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>

            <div class="col-md-7 derecha">
                <p class="nuevo">Nuevo</p>
                <h2><%= producto.categories.category_name + " " + producto.brands.brand_name + " " + producto.model %>  </h2>
                <p class=""><strike>$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></strike> <strong> <%= producto.discount %>  % OFF</strong></p>
                <h2 class="precio-detail">
                    $<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %> 
                  </h2>
                <p><b>Codigo de producto: <%= producto.model %> </b></p>
                <img class="stars" src="/images/stars.png" alt="stars">
                <p><b>Acerca de este producto:</b> </p>
                <p><%= producto.description %> </p>
                <p><b>Disponibilidad: </b>En Stock</p>
                <label for="text">Cantidad: </label>
                <input class="cantidad" type="text" value="1">
                <a href="/products/cart"><button type="button" class="btn btn-success boton">Agregar al carro</button></a>
            </div>


            <div class="col-md-12 descripcion2">
                <h3>Especificaciones TÃ©cnicas</h3>

                <p><%= producto.features%> </p>




            </div>


        </div>

        <div class="row similares">

            <div class="col-12 productos-relacionados">


                <h2>PRODUCTOS RELACIONADOS</h2>
            </div>

                <% productos.forEach(producto => { %>
                    <div class="col-12 col-md-6 col-lg-3 contenedor">

                        <div class="producto">
                          <a href="/products/detail/<%= producto.id %>   ">
                            <figure>
                              <img src="/images/products/<%= producto.images %> " alt="">
                            </figure>
                            <article>
                              <span> <%= producto.categories.category_name + " " + producto.brands.brands_name %>  </span>
                              <h2>$<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></h2>
                            </article>
                         </a>
                        </div>
            
                      </div>
                <% }) %>
            </div>

           

        </div>

    </div>








    <%- include('./partials/footer.ejs') %>

</body>

</html>